<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/go_to_monthly_view"
            android:layout_weight="1">

            <ImageButton
                android:layout_marginVertical="5dp"
                android:layout_height="match_parent"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_daily_view"
                android:tint="@color/color_tab_title"
                android:background="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go_to_weekly_view"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageButton
                android:layout_marginVertical="5dp"
                android:clickable="false"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:background="@android:color/white"
                android:tint="@color/color_tab_title"
                android:src="@drawable/ic_daily_view"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/go_to_daily_view"
            android:layout_weight="1">

            <ImageButton
                android:layout_marginVertical="5dp"
                android:layout_height="match_parent"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:tint="@color/color_tab_title"
                android:src="@drawable/ic_daily_view"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:textAlignment="center"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/go_to_flow_view"
            android:layout_weight="1">

            <ImageButton
                android:layout_marginVertical="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:tint="@color/color_tab_title"
                android:src="@drawable/ic_daily_view"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flow"
                android:textAlignment="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_tab_title"/>

</LinearLayout>